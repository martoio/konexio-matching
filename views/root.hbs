<style>
    .error {
        color: #a94442;
        background-color: #f2dede;
        border-color: #ebccd1;
        width: 400px;
        margin: auto;
    }
</style>

<div class="center">
    <img id="title" src="images/logo.png" />
    <form action="/login" method="post" id="signup-form">
        <div class="input-group">
            <div><input class="input" name="email" type="email" placeholder="EMAIL" required/></div>
            <div><input class="input" name="password" type="password" placeholder="PASSWORD" required/></div>
        </div>
        <div class="button-group">
            <input id="login-btn" class="button login-button" type="submit" value="LOG IN">
            <!--<a href="/dashboard"><button class="button login-button">LOG IN</button></a>-->
            <input id="signup-btn" class="button signup-button" type="submit" value="SIGN UP">
        </div>
    </form>
    <div class="text"><a href="">Forgot your password?</a></div>


    {{#if sessionFlash.message}}
        <div class="error">
            {{sessionFlash.message}}
        </div>
    {{/if}}


</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script>

    let form = $('#signup-form');
    let lbtn = $('#login-btn');
    let sbtn = $('#signup-btn');

    lbtn.on('click', function (e) {
        e.preventDefault();
        form.attr('action', '/login');
        form.submit();
    });

    sbtn.on('click', function (e) {
        e.preventDefault();
        form.attr('action', '/signup');
        form.submit();
    });
</script>